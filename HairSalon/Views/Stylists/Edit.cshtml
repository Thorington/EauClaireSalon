@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h2>Edit</h2>

<h4>Edit this stylist: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    <p>@Html.HiddenFor(model => model.StylistId)</p>
    <p>@Html.LabelFor(model => model.Name)</p>
    <p>@Html.EditorFor(model => model.Name, new { @class = "form-control", required="required", style="width: 300px;"})</p>


    <input type="submit" value="Save" class="btn"/>
}
